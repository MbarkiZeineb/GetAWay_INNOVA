{% extends 'base_back.html.twig' %}



{% block content %}
    <br>
    <br>
    <br>
    <br>

<div class="app-content">
    <div class="side-app">
        <div class="page-header">
            <h1 class="page-title">Avion</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="fe   fe-box mr-1"></i> Tables</a></li>
            </ol>
            {% for message in app.flashes('info') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">*Liste des Avions*</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
        <thead>
        <tr class="table-info">
            <th class="wd-15p">Id avion</th>
            <th class="wd-15p">Nombre de Place</th>
            <th class="wd-15p">Nom Avion</th>
            <th class="wd-15p">Type</th>
            <th class="wd-15p">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for avion in avions %}
            <tr>
                <td>{{ avion.idAvion }}</td>
                <td>{{ avion.NbrPlace }}</td>
                <td>{{ avion.NomAvion }}</td>
                <td>{{ avion.type }}</td>
                <td>
                    <a href="{{ path('app_avion_show', {'idAvion': avion.idAvion}) }}" class="btn btn-primary ">show</a>
                    <a href="{{ path('app_avion_edit', {'idAvion': avion.idAvion}) }}" class="btn btn-primary ">edit</a>
                    {# <a href="{{ path('app_vol', {'idAvion': avion.idAvion}) }}" class="btn btn-primary ">vol</a> #}
                    <br>
                    <br>
                     {{ include('avion/_delete_form.html.twig') }}


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <a href="{{ path('app_avion_new',{'ida':app.user.id}) }}">Create new</a>


{% endblock %}
