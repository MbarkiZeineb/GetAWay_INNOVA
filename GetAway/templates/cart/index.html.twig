{% extends 'base_front.html.twig ' %}

{% block content %}
    <main id="main">
    <!-- top information area -->
    <div class="inner-top">
        <div class="container">
            <h1 class="inner-main-heading">YOUR CART</h1>
            <nav class="breadcrumbs">
                <ul>
                    <li><span>Cart</span></li>
                </ul>
            </nav>
        </div>
    </div>
        <div class="demo-wrapper inner-main common-spacing container">
            <table class="table table-striped table-hover data-table">
                <thead>
                <tr>
                    <th scope="col">Type</th>
                    <th scope="col">Date depart </th>
                    <th scope="col"> Date fin </th>
                    <th scope="col"> Destination </th>
                    <th scope="col"> Nombre de place </th>
                    <th scope="col">  Reserver  </th>
                </tr>
                </thead>
                <tbody>

                <tr>
                    {% if items | length > 0  %}
                    {% for voyageorganise in items  %}
                    {%  if  voyageorganise is empty  %}
                    {% else %}
                    {%  if  voyageorganise.voyage is empty  %}
                    {% else %}
                                <td >Voyage Organise </td>
                                <td >{{ voyageorganise.voyage.datedepart}}</td>
                                <td>{{ voyageorganise.voyage.datearrive}}</td>
                                <td >{{ voyageorganise.voyage.villedest}}</td>
                                <td >{{ voyageorganise.voyage.nbrplace}}</td>
                                <td >   <button type="button"  class="btn btn-default"><a href="{{ path('add_vo',{'id':voyageorganise.voyage.idVoy}) }}"> Reserver Voyage </a></button> </td>

                </tr>
                {% endif %}
                {% endif %}
                {% endfor %}

                {% endif %}
                <tr>

                    {% if items1 | length > 0  %}
                        {% for vol in items1  %}
                            {%  if  vol is empty  %}
                            {% else %}
                    {%  if  vol.vol is empty  %}
                    {% else %}
                                <td > Vol  </td>
                                <td >{{ vol.vol.dateDepart | date('d-m-Y H:i:s')}}</td>
                                <td>{{ vol.vol.dateArrivee  | date('d-m-Y H:i:s') }}</td>
                                <td >{{ vol.vol.villeArrivee}}</td>
                                <td >{{ vol.vol.nbrPlacedispo}}</td>
                                <td >
                                    <button type="button"  class="btn btn-check"><a href="{{ path('add_vol',{'id':vol.vol.idVol}) }}"> Reserver vol </a></button>
                                </td>

                </tr>
                    {% endif %}
                    {% endif %}
                    {% endfor %}

                {% endif %}
                {% if items3 | length > 0  %}
                {% for heb in items3 %}
                {%  if  heb is empty  %}
                {% else %}
                    {%  if  heb.heb is empty  %}
                    {% else %}
                <tr>

                                <td > Hebergement</td>
                                <td >{{ heb.heb.dateStart | date('d-m-Y H:i:s')}}</td>
                                <td>{{ heb.heb.dateEnd  | date('d-m-Y H:i:s') }}</td>
                                <td >{{ heb.heb.adress}}</td>
                                <td >--------</td>
                                <td >
                                    <button type="button"  class="btn btn-check"><a href="{{ path('add_H',{'id':heb.heb.referance}) }}"> Reserver</a></button>
                                </td>

                </tr>
                    {% endif %}
                {% endif %}
                {% endfor %}

                {% endif %}

                {% if items4 | length > 0  %}
                    {% for act in items4 %}
                        {%  if  act is empty  %}
                        {% else %}
                            {%  if  act.act is empty  %}
                            {% else %}
                                <tr>

                                    <td > Activite </td>
                                    <td >{{ act.act.date}}</td>
                                    <td>{{ act.act.date  }}</td>
                                    <td >{{ act.act.nom}}</td>
                                    <td >{{  act.act.nbrplace}}</td>
                                    <td >
                                        <button type="button"  class="btn btn-check"><a href="{{ path('add_Act',{'id': act.act.refact}) }}"> Reserver</a></button>
                                    </td>

                                </tr>
                            {% endif %}
                        {% endif %}
                    {% endfor %}

                {% endif %}


                </tbody>
            </table>
        </div>
    </main>



{% endblock %}
