<!DOCTYPE html>
<html>

{% block body %}
<div class="page">
    <table>
        <tr>
            <td>
                <p style="color: #0000FF", style="font-size: 15px;">
                        <span class="center">  le {{ "now"|date("m/d/Y") }} </span>
                </p>
            </td>
        </tr>
    </table>

    <h1 align="center" style="color: #0000FF">liste des vols</h1><hr>


        <body>

        {% for vol in vol %}
            <h3 style="color: #0000FF">Numéro du vol :</h3>
            <p >{{ vol.numVol }}</p>
            <br>
            <h3 style="color: #0000FF">Date depart :</h3>
            <p>{{ vol.dateDepart ? vol.dateDepart|date('Y-m-d H:i') : '' }}</p>
            <br>
            <h3 style="color: #0000FF">Date arrivée :</h3>
            <p>{{ vol.dateArrivee ? vol.dateArrivee|date('Y-m-d H:i') : '' }}</p>
            <br>
            <h3 style="color: #0000FF">Ville depart :</h3>
            <p>{{ vol.villeDepart }}</p>
            <br>
            <h3 style="color: #0000FF">Ville arrivée :</h3>
            <p>{{ vol.villeDepart }}</p>
            <br>
            <h3 style="color: #0000FF">Nombre de place dispo :</h3>
            <p>{{ vol.nbrPlacedispo }}</p>
            <br>
            <h3 style="color: #0000FF">Prix :</h3>
            <p>{{ vol.prix }}</p>
            <br>
            <h1 align="center"></h1><hr>

        {% endfor %}

        </body>
</div>
    {% endblock %}
